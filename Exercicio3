package exercicio3;
import java.util.Scanner;//importando a classe para receber dados do usuário

public class Exercicio3 {

//declaração de metodo principal	
public static void main(String[] args){
	
Scanner entrada = new Scanner(System.in);//cria o objeto para obter a entrada atraves da janela de comando
//permite ler a entrada do teclado atraves do System.in


int numero1; //declaração da primeira variavel
int numero2;//declaração da segunda variavel 


System.out.println("Informe N1:");//exibição de texto - prompt
numero1 = entrada.nextInt();// lê o primeiro número fornecido pelo usuário e aguarda até que pressione a tecla Enter
System.out.println("Informe N2:");//exibição de texto - prompt
numero2 = entrada.nextInt();//lê o segundo número fornecido pelo usuário e aguarda até que pressione a tecla Enter	
System.out.println();//pula uma linha

//Realiza as comparações de acordo com o que foi informado pelo usuário e exibe o resultado na tela
if (numero1==numero2){
	System.out.println("Resultado: " +numero1 +" é igual a " + numero2);			
} 
if (numero1>numero2){
	System.out.print("Resultado: " +numero1 + " é maior que " +numero2);
}
if(numero1<numero2){
	System.out.printf("Resultado: " +numero1 + " é menor que " +numero2);
}

}//fim do metodo principal
}//fim da classe
